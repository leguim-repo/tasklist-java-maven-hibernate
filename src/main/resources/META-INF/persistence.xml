<?xml version="1.0" encoding="UTF-8" ?>
<!-- TODO Pendiente de ser elimanado en el momento de usar Full Hibernate -->
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="TaskListPersistence">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.bootcamp.seatcode.mike.entities.EstadoEntity</class>
        <class>com.bootcamp.seatcode.mike.entities.LoginEntity</class>
        <class>com.bootcamp.seatcode.mike.entities.TareaEntity</class>
        <class>com.bootcamp.seatcode.mike.entities.UsuarioEntity</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/tasklist?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="secret1234" />
            <!-- org.hibernate.dialect.MySQL5InnoDBDialect (for this way deprecated) -->
            <!-- org.hibernate.dialect.MySQLDialect -->

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="validate" />
            <!--
            create - creates the schema, destroying previous data
            update - update existing schema
            validate - validate the schema, makes no changes to the database
            create-drop -  create the schema with destroying the data previously present(if there). It also drop the database schema when the SessionFactory is closed.
            -->
        </properties>
    </persistence-unit>

</persistence>